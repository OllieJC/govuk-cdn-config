sub vcl_error {

  # Assume we've hit vcl_error() because the backend is unavailable
  if (req.restarts < 1) {
    return (restart);
  }

  synthetic {"
    <!DOCTYPE html>
    <html>
      <head>
        <title>GOV.UK Redirect</title>
        <style>
          body { font-family: Arial, sans-serif; margin: 0; }
